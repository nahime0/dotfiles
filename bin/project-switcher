#!/usr/bin/env bash

# Credit to ThePrimeagen

# Paths to search for projects
SEARCH_PATHS=(
    ~/Developer
    /Volumes/Crucio/Developer
)

if [[ $# -eq 1 ]]; then
    selected=$1
else
    items=""
    for path in "${SEARCH_PATHS[@]}"; do
        if [[ -d "$path" ]]; then
            found=$(find "$path" -maxdepth 2 -mindepth 1 -type d 2>/dev/null)
            if [[ -n "$found" ]]; then
                items+="$found"$'\n'
            fi
        fi
    done
    selected=$(echo "$items" | grep -v '^$' | fzf)
fi

if [[ $selected == '' ]]; then
    exit
fi

dirname=`basename $selected | sed 's/\./_/g'`

tmux switch-client -t =$dirname
if [[ $? -eq 0 ]]; then
    exit 0
fi

tmux new-session -c $selected -d -s $dirname && tmux switch-client -t $dirname || tmux new -c $selected -A -s $dirname
