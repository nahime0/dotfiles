# Custom functions

s() {
        cd ~/Sviluppo/$1
}

# Path management
# - Add composer bin path to PATH
# - Add cargo bin path to PATH

PATH=$PATH:$HOME/.composer/vendor/bin:$HOME/.cargo/bin

# Aliases

alias ssh-add-all="ssh-add --apple-use-keychain --apple-load-keychain"
alias get-music="youtube-dl -o \"%(playlist_index)s-%(title)s.%(ext)s\" -x --audio-format mp3 --audio-quality 0 --embed-thumbnail --add-metadata --metadata-from-title \"%(artist)s - %(title)s\""
alias t="tmux new -As0"

# Export the default editor, this will make `sudo -e` work to edit file as root

export EDITOR="nvim"

