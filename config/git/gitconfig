[include]
    path = ~/.gitidentity
[init]
    defaultBranch = main
[commit]
    gpgsign = true
[gpg]
    format = ssh
[core]
    editor = nvim
    autocrlf = input
	excludesfile = /Users/nahime/.gitignore
[filter "lfs"]
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
[alias]
    a = add
    aa = add --all
    bd = branch -d
    c = commit -m
    ca = commit --amend
    cb = checkout -b
    co = checkout
    d = diff
    dd = difftool -t nvimdiff -y
    last = log -1 HEAD --stat
    ll = log --oneline
    p = push
    pa = push --tags
    pu = pull --rebase
    s = status -sb
    se = !git rev-list --all | xargs git grep -F
    sta = stash
    stap = stash pop
[gpg "ssh"]
	program = ssh-keygen
